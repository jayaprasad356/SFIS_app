<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RcSearchActivity">

    <ImageView
        android:id="@+id/icBack"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginHorizontal="10dp"
        android:src="@drawable/ic_backbtn"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/cardview"
        android:layout_margin="20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="6dp"
        app:cardMaxElevation="8dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/bikeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/urbanistblack"
                    android:padding="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="15dp"
                    android:singleLine="true"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/bikeModel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/urbansemibold"
                    android:padding="5dp"
                    android:layout_marginHorizontal="16dp"
                    android:singleLine="true"
                    android:textColor="@color/black"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="vaild upto :"
                        android:fontFamily="@font/urbansemibold"
                        android:padding="5dp"
                        android:alpha="0.7"
                        android:singleLine="true"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/validDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/urbansemibold"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/black"
                    android:alpha="0.2"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="30dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="owned by :"
                        android:fontFamily="@font/urbansemibold"
                        android:padding="5dp"
                        android:alpha="0.7"
                        android:singleLine="true"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/owner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/urbansemibold"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="registration number :"
                        android:fontFamily="@font/urbansemibold"
                        android:padding="5dp"
                        android:alpha="0.7"
                        android:singleLine="true"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/registrationNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/urbansemibold"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:textColor="@color/black"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About insurance"
                    android:fontFamily="@font/urbanistblack"
                    android:padding="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="15dp"
                    android:singleLine="true"
                    android:textColor="@color/black"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="insurance is currently : "
                        android:fontFamily="@font/urbansemibold"
                        android:padding="5dp"
                        android:alpha="0.7"
                        android:singleLine="true"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/insuranceState"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/urbanistblack"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:textColor="@color/black"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="date of registration :"
                        android:fontFamily="@font/urbansemibold"
                        android:padding="5dp"
                        android:alpha="0.7"
                        android:singleLine="true"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/DateOfRegistration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/urbansemibold"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:textColor="@color/black"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="insurance policy no :"
                        android:fontFamily="@font/urbansemibold"
                        android:padding="5dp"
                        android:alpha="0.7"
                        android:singleLine="true"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/policyNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/urbansemibold"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:textColor="@color/black"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="insurance company name:"
                        android:fontFamily="@font/urbansemibold"
                        android:padding="5dp"
                        android:alpha="0.7"
                        android:singleLine="true"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/PolicyCompanyName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/urbansemibold"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:textColor="@color/black"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About vehicle"
                    android:fontFamily="@font/urbanistblack"
                    android:padding="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="15dp"
                    android:singleLine="true"
                    android:textColor="@color/black"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="engine number:"
                        android:fontFamily="@font/urbansemibold"
                        android:padding="5dp"
                        android:alpha="0.7"
                        android:singleLine="true"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/engineNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/urbansemibold"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:textColor="@color/black"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="fuel type:"
                        android:fontFamily="@font/urbansemibold"
                        android:padding="5dp"
                        android:alpha="0.7"
                        android:singleLine="true"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/fuelType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/urbansemibold"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:textColor="@color/black"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="vehicle color :"
                        android:fontFamily="@font/urbansemibold"
                        android:padding="5dp"
                        android:alpha="0.7"
                        android:singleLine="true"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/vehicelColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/urbansemibold"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About owner"
                    android:fontFamily="@font/urbanistblack"
                    android:padding="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="15dp"
                    android:singleLine="true"
                    android:textColor="@color/black"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="permanent address :"
                        android:fontFamily="@font/urbansemibold"
                        android:padding="5dp"
                        android:alpha="0.7"
                        android:singleLine="true"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/permanentAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/urbansemibold"
                        android:padding="5dp"
                        android:textColor="@color/black"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>
</LinearLayout>